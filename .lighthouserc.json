{
  "ci": {
    "collect": {
      "staticDistDir": "./_site",
      "url": [
        "http://localhost/humanist_modernism/index.html",
        "http://localhost/humanist_modernism/about/index.html",
        "http://localhost/humanist_modernism/timeline/index.html",
        "http://localhost/humanist_modernism/designers/index.html",
        "http://localhost/humanist_modernism/blog/index.html",
        "http://localhost/humanist_modernism/blog/historical-context/index.html",
        "http://localhost/humanist_modernism/blog/design-principles/index.html",
        "http://localhost/humanist_modernism/blog/modern-application/index.html"
      ],
      "numberOfRuns": 3
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": ["error", {"minScore": 0.9}],
        "categories:accessibility": ["error", {"minScore": 0.9}],
        "categories:best-practices": ["error", {"minScore": 0.9}],
        "categories:seo": ["error", {"minScore": 0.9}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
