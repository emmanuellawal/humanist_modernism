---
layout: layouts/base.njk
---

<article class="max-w-container-max mx-auto">
  {# Article Header #}
  <header
    class="py-4xl px-[12%] text-center bg-gradient-to-b from-bg-primary to-bg-secondary border-b border-border-subtle"
  >
    <div class="max-w-measure-optimal mx-auto">
      <h1 class="text-h1 font-bold mb-lg text-text-primary">{{ title }}</h1>
      {% if description %}
      <p class="text-body-xl leading-relaxed text-text-secondary mb-2xl">{{ description }}</p>
      {% endif %}
      <time datetime="{{ date | dateToISO }}" class="text-caption text-text-muted">
        {{ date | readableDate }}
      </time>
    </div>
  </header>

  {# Article Content #}
  <div class="section">
    <div class="content-container prose prose-lg max-w-measure-optimal mx-auto">
      {{ content | safe }}
    </div>
  </div>

  {# Back to Blog #}
  <div class="px-[12%] pb-4xl text-center">
    <a href="/humanist_modernism/blog/" class="button-secondary">‚Üê Back to Blog</a>
  </div>
</article>
